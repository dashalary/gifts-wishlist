<form method="POST" action="/items/<%=@item.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">

 <label for="name">Name:</label>
  <input type="text" name="name" value="<%=@item.name%>"><br>
  <br>
 <label for="store">Sold at:</label>
 <input type="text" name="store" value="<%=@item.store%>"><br>
 <br>
<label for="price">Price:</label>
<input type="integer" name="price" value="<%=@item.price%>"><br>
<br>
<label for="category">Category:</label>
<% @categories.each do |c| %>
    <input type="checkbox" name="category_id" id="<%= c.id %>" value="<%= c.id %>"><%= c.name %><br>
    <br>
    <% end %>
    <br>
  <input type="submit" value="Submit Changes"><br>
  <br>
  <a href="/categories"> Click here to manage categories </a>
  <button type="submit" class="btn btn-light"><a href="/logout">Log Out?</a></button><br>
</form>
